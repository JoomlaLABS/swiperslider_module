	<description>MOD_JOOMLALABS_SWIPERSLIDER_MODULE_XML_DESCRIPTION</description>

	<files>
		<filename module="mod_joomlalabs_swiperslider_module">mod_joomlalabs_swiperslider_module.php</filename>
		<folder>tmpl</folder>
		<folder>language</folder>
		<folder>media</folder>
